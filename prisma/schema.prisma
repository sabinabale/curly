generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Monitor {
  id           Int      @id @default(autoincrement())
  url          String
  statusCode   Int?
  responseTime Int?
  error        String?
  timestamp    DateTime @default(now())

  @@index([url, timestamp])
}
